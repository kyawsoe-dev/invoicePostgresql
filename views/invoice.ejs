  <script src="/assets/jquery.js"></script>
  <script src="/javascripts/bootstrap.min.js"></script>
  <script src="/javascripts/invoice.js"></script>
</head>
<body>
  <%- include("./components/navbar.ejs"); %>
  <div class="row" style="margin-left: 100px;">
    <a class="nav-link text-secondary" href="/" style="font-size: large;">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-door" viewBox="0 0 16 16">
        <path d="M8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4.5a.5.5 0 0 0 .5-.5v-4h2v4a.5.5 0 0 0 .5.5H14a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293zM2.5 14V7.707l5.5-5.5 5.5 5.5V14H10v-4a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v4z"/>
      </svg>
      Home &GreaterGreater;
      </a>
      <a class="nav-link text-secondary" href="/api/invoice/page" style="font-size: large;">Invoice Page</a>
  </div>
  <form id="invoiceForm">
  <h4 class="sale-title mb-3" style="margin-left: 100px;">Sales Invoice</h4>
    <div class="container">
        <label for="customer_name">Customer Name :</label>
        <input type="text" name="customer_name" placeholder="Enter Customer Name">
        <label for="customer_phone">
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          Customer Phone :</label>
        <input type="text" name="customer_phone" placeholder="Enter Customer Phone"> <br><br>
        <label for="customer_email">Customer Email :</label>
        <input type="text" name="customer_email" placeholder="Enter Customer Email">
        <label for="customer_address">
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          Customer Address :</label>
        <input type="text" name="customer_address" placeholder="Enter Customer Address">
    </div>
  
    <h4 class="stock-title mt-2" style="margin-left: 100px;">Stock List</h4>
    <input type="button" class="btn btn-secondary add_button" value="ADD"> 
    <table>
      <thead>
        <tr>
          <th>Stock Code</th>
          <th>Stock Description</th>
          <th>Stock Price</th>
          <th>Stock Quantity</th>
          <th>Amount</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="stockList">
        
      </tbody>
    </table>
    <div class="total">Total Amount: <span id="totalAmount">0</span></div>
    <input type="hidden" name="total_amount" value="0">
    <br>
    <input type="submit" class="btn btn-secondary" id="btnSubmit" name="btnSubmit" value="SAVE">
  </form>
  <footer class="text-center text-lg-start text-white" style="background-color: #1c2331; margin-top: 90px;">
    <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2)">
      <a class="text-white" style="font-size: 15px;" href="/"> Â© 2024 All Right Reserved</a>
    </div>
  </footer>  
  </body>
</html>
