<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="icon" href="/images/invoice.png" type="image/x-icon"/>
  <link rel="stylesheet" href="/stylesheets/invoice_list.css">
  <script src="/assets/jquery.js"></script>
  <script src="/javascripts/invoice_list.js"></script>
</head>
<body>
    <h2>Invoice List</h2>
    <form id="searchForm">
      <input type="search" name="search" id="searchInput" placeholder="Enter Search Input" value="<%= query.search %>">
    </form>
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>Invoice No</th>
          <th>Customer Name</th>
          <th>Customer Phone</th>
          <th>Customer Email</th>
          <th>Customer Address</th>
          <th>Invoice Date</th>
          <th>Total Amount</th>
          <th>Stock Items</th>
        </tr>
      </thead>
      <tbody>
        <% if(data && data.length > 0) { %>
          <% data.forEach((invoice, index) => { %>
            <tr>
              <td><%= ++index %></td>
              <td><%= invoice.invoice_no %></td>
              <td><%= invoice.customer_name %></td>
              <td><%= invoice.customer_phone %></td>
              <td><%= invoice.customer_email %></td>
              <td><%= invoice.customer_address %></td>
              <td><%= invoice.invoice_date %></td>
              <td><%= invoice.total_amount %></td>
              <td>
                <ul>
                  <% invoice.stock_items.forEach((stock) => { %>
                    <li>
                      Stock Code: <%= stock.stock_code %><br>
                      Description: <%= stock.stock_description %><br>
                      Price: <%= stock.stock_price %><br>
                      Quantity: <%= stock.stock_quantity %>
                    </li>
                  <% }); %>
                </ul>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="7">No data available</td>
          </tr>
        <% } %>
      </tbody>
    </table>    
  </body>
</html>
